@model IEnumerable<Hair_Salon_Web_ASP.NET.Models.Post>
<head>
    <link rel="stylesheet" href="~/style.css">
</head>
@{
    ViewData["Title"] = "Index";
}

<h1 class="lable">Manage Post</h1>
<p>
    <a asp-action="Create">
        <img style="width:60px;height:60px" src="~/images/plus.png" alt="Create New" />
    </a>
</p>
<div class="table-responsive">
    <table class="table table-bordered" style="margin-bottom:350px">
        <thead>
            <tr class="text-center">
                <th>
                    Title
                </th>
                <th>
                    Image
                </th>
                <th>
                    Description
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.title
                    </td>

                    <td>
                        <img src="~/Posts/@item.post_image" style="width:130px;height:130px" />

                    </td>


                    <td>
                        @item.description
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-post_id="@item.post_id" style="text-decoration:none">
                            <img style="width:40px;height:40px" src="~/images/edit.png" alt="" />
                        </a>

                        <a asp-action="Delete" asp-route-post_id="@item.post_id" onclick="return confirm('Do you want to delete this post?')">
                            <img style="width:40px;height:40px" src="~/images/delete.png" alt="" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

