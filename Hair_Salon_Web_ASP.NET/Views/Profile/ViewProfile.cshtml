@model Hair_Salon_Web_ASP.NET.Models.User

@{
    ViewData["Title"] = "ViewProfile";
}
<head>
    <link rel="stylesheet" href="~/style.css">
</head>

    <div class="card mt-3 mb-5" style="background-color:#EEE8AA">
        <h1 class="lable m-2">Your Information</h1>
        <dl class="row lable m-2">
            <dt class="col-sm-2">
                Phone Number:
            </dt>
            <dd class="col-sm-10">
                @Model.phone_number
            </dd>
            <dt class="col-sm-2">
                Role:
            </dt>
            <dd class="col-sm-10">
                @Model.role
            </dd>
            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @Model.name
            </dd>
            <dt class="col-sm-2">
                Gender:
            </dt>
            <dd class="col-sm-10">
                @Model.gender
            </dd>
            <dt class="col-sm-2">
                Address:
            </dt>
            <dd class="col-sm-10">
                @Model.address
            </dd>
            <dt class="col-sm-2">
                About User:
            </dt>
            <dd class="col-sm-10 card-text">
                @Model.about_user
            </dd>
            <div class="row">
            <a class="a mb-3 col" asp-action="Edit" asp-controller="Profile" asp-route-user_id="@Model?.user_id">
                <button type="submit" class="btn btn-primary" style="width: 11rem;">Edit</button>
            </a>


            <a class="a mb-3 col" asp-action="Logout" asp-controller="Login" asp-route-user_id="@Model?.user_id">
                <button type="submit" class="btn btn-warning" style="width: 11rem;">Log Out</button>
            </a>
            </div>
            
             
           
      
          
        </dl>    
    
    </div>
  


<div class="">
    <a class="a mb-4" asp-action="Index" asp-controller="Home">
       Back
    </a>
</div>
