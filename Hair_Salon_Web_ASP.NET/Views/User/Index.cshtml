@model IEnumerable<Hair_Salon_Web_ASP.NET.Models.User>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/style.css">
</head>
<h1 class="lable">Manage User</h1>


<a asp-action="Create">
    <img style="width:60px;height:60px" src="~/images/plus.png" alt="Create New" />
</a>
<div class="table-responsive">
    <table class="table table-bordered align-middle" style="margin-bottom:350px">
        <thead>
            <tr class="text-center">
                <th scope="col">
                    Phone Number
                </th>
                <th scope="col">
                    Role
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Gender
                </th>
                <th scope="col">
                    Address
                </th>
                <th scope="col">
                    About User
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.phone_number
                    </td>
                    <td>
                        @item.role
                    </td>
                    <td>
                        @item.name
                    </td>
                    <td>
                        @item.gender
                    </td>
                    <td>
                        @item.address
                    </td>
                    <td>
                        @item.about_user
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-user_id="@item.user_id" style="text-decoration:none">
                            <img style="width:40px;height:40px" src="~/images/edit.png" alt="" />
                        </a>

                        <a asp-action="Delete" asp-route-user_id="@item.user_id" onclick="return confirm('Do you want to delete this user?')">
                            <img style="width:40px;height:40px" src="~/images/delete.png" alt="" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
