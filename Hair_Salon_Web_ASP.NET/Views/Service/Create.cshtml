@model Hair_Salon_Web_ASP.NET.Models.Service
<head>
    <link rel="stylesheet" href="~/style.css">
</head>
@{
    ViewData["Title"] = "Create";
}
<div class="row lable card align-content-center" style="background-color:lightgrey">
    <div class="col-md-4 card-body" style="background-color:#EEE8AA">
        <h1 class="lable text-center mb-3">Create Service</h1>
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label class="control-label">Enter Service Name(*): </label>
                <input asp-for="name" placeholder="Service Name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Enter Price(*):</label>
                <input asp-for="price" placeholder="Price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label lable">Choose Image(*):</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Enter Time To Finish(*):</label>
                <input asp-for="time_to_cut" placeholder="Time To Finish" class="form-control" />
                <span asp-validation-for="time_to_cut" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label">Enter Description:</label>
                <textarea asp-for="description" class="form-control form-control-lg" rows="5" style="overflow-y: auto;"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary mx-auto"/>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
