@model IEnumerable<Hair_Salon_Web_ASP.NET.Models.Service>
<head>
    <link rel="stylesheet" href="~/style.css">
</head>
@{
    ViewData["Title"] = "Index";
}

<h1 class="lable">Manage Service</h1>

<a asp-action="Create">
    <img style="width:60px;height:60px"src="~/images/plus.png" alt="Create New"  />
</a>
<div class="table-responsive">
    <table class="table table-bordered" style="margin-bottom:200px">
        <thead>
            <tr class="text-center">
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Time</th>
                <th scope="col">Price</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Posts/@item.ser_image" style="width:130px;height:130px" />

                    </td>
                    <td>@item.name</td>
                    <td>@item.time_to_cut</td>
                    <td>@item.price</td>
                    <td>@item.description</td>
                    <td>
                        <a asp-action="Edit" asp-route-ser_id="@item.ser_id" style="text-decoration:none">
                            <img style="width:40px;height:40px" src="~/images/edit.png" alt="" />
                        </a>

                        <a asp-action="Delete" asp-route-ser_id="@item.ser_id" onclick="return confirm('Do you want to delete this service?')">
                            <img style="width:40px;height:40px" src="~/images/delete.png" alt="" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


