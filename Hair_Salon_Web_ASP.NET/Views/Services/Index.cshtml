@model IEnumerable<Hair_Salon_Web_ASP.NET.Models.Service>

@{
    ViewData["Title"] = "Index";
}
<head>
    <style>.card-img-container {
    position: relative;
    overflow: hidden;
    padding-top: 56.25%; /* 16:9 aspect ratio */
}

.card-img-top {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* Ensure the image covers the entire container */
}

.img-responsive {
    width: 100%;
    height: auto;
}
</style>
</head>
<div class="row row-cols-1 row-cols-md-3 g-4 mt-2">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card">
                <div class="card-img-container">
                    <img class="card-img-top img-responsive" src="~/Posts/@item.ser_image" alt="Card image" />
                </div>
                <div class="card-body">
                    <h5 class="card-title text-black">@item.name</h5>
                    <h5 class="card-title text-black">@item.price</h5>
                    <p class="card-text text-black">
                        @item.description
                    </p>
                    <div class="d-flex justify-content-center">
                        <a asp-action="Create" asp-controller="Appointment" asp-route-ser_id="@item.ser_id">
                            <button type="button" class="btn btn-info text-white">Booking Now</button>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


