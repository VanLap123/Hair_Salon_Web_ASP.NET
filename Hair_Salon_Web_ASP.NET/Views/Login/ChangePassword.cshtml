@model Hair_Salon_Web_ASP.NET.Models.User
<head>
    <link rel="stylesheet" href="@Url.Content("~/style.css")">
</head>

@{
    ViewData["Title"] = "Change Password";
}

<section class="vh-100" style="background-color:lightgrey; margin-top:20px;border-radius:5px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <i class="fas fa-crow fa-2x me-3 pt-5 mt-xl-4" style="color:blue;"></i>
                    <span class="h1 fw-bold mb-0">H&L Hair Salon</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-0 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-action="ChangePassword" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="font-size:40px; font-weight:bold">Change Password</h3>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label lable">Enter Phone Number(*):</label>
                            <input asp-for="phone_number" type="" class="form-control form-control-lg" placeholder="Phone Number" />
                            <span asp-validation-for="phone_number" class="text-danger"></span>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label lable">Enter Old Password(*):</label>
                            <input asp-for="password" type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Password" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div data-mdb-input-init class="form-outline mb-4">
                            <label class="form-label lable">Enter New Password(*):</label>
                            <input name="new_password" type="password" id="form2Example28" class="form-control form-control-lg" placeholder="Password" />
                            <span class="text-danger">@ViewBag.new_password</span>
                        </div>

                        <div class="pt-1 mb-4">
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-info btn-lg btn-block bg-primary" type="submit">Change</button>
                        </div>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/images/Black Yellow Modern Special Promo Haircut Instagram Story.png"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left; border-bottom-right-radius:5px;border-top-right-radius:5px">
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
